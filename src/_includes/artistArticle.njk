---
layout: 'base.njk'
permalink: "articles/artists/{{ name |slug }}/"
---



    <main>
      <div style="padding: 5%;" class="row">
        <div id="nuh" class="one-third column">
          <div>
          <h1>{{ name }}</h1>
          <img style="width: 80%;" src="/assets/pfps/{{ name | slug}}.jpg" alt="{{ thumbAlt }}">
          <!--this bit below loads tag links. very scary shit. don't mess with these again-->
          {% include 'artistArticleTaglinks.njk' %}
          </div>
          <div>
            <p>{{ content | safe }}</p>
          </div>
        </div>

        <div class="two-thirds column">
          <h1>Releases</h1>
          <p id="albumaside">
            releases go here
                  <ul><h5>
                  {% for post in tags[tag] %} 
                  <li><a href="articles/releases/{{ post.data.name | slug }}/">{{ post.data.name }}</a></li>
                  {% endfor %}

              </h5>
              </ul>



          </p>
        </div>
        

      </div>
      </main>
