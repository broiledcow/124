              <h5>Releases by {{name}}</h5>
                {% for post in collections.releases %}
                    {% if post.data.artist !== name %}
                        <li>
                            <a href="{{ post.url }}">
                                {{ post.data.name }} - {{ post.data.year }}
                            </a>
                        </li>
                    {% endif %}
                {%- endfor -%}