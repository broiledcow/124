<div style="margin-left: 10%; margin-right: 10%;" class="row">

    <div style="background: rgba(97, 118, 177, 0.25);" class="one-half column">
      <h3>Artists</h3>
      <ul><h5>
      {% for post in collections.artists %}
        <li><a href="articles/artists/{{ post.data.name | slug }}/">{{ post.data.name }}</a></li>
      {% endfor %}
      </h5>
      </ul>
    </div>

    <div style="background: rgba(177, 133, 97, 0.25);" class="one-half column">
      <h3>Releases</h3>
                {%- for post in collections.releases -%}
                    {% if post.data.artist !== this.page.data.name %}
                        <li>
                            <a href="{{ post.url }}">
                                {{ post.data.name }} - {{ post.data.year }}
                            </a>
                        </li>
                    {% endif %}
                {%- endfor -%}
    </div>
  </div>

